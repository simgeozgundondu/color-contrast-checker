{
  "manifest_version": 3,
  "name": "Coolors Color Contrast Checker",
  "version": "3.0",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "48": "public/icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "js": [
        "src/content.js"
      ],
      "matches": [
        "https://coolors.co/palette/*"
      ]
    }
  ],
  "icons": {
    "48": "public/icons/icon48.png"
  }
}
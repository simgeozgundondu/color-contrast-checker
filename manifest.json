{
  "manifest_version": 3,
  "name": "Coolors Color Contrast Checker",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "public/popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "src/content.js"
      ],
      "matches": [
        "https://coolors.co/palette/*"
      ]
    }
  ],
  
  "icons": {
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  }
}